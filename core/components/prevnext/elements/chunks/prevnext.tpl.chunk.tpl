<div class="prevnext-wrapper">
    <div class="prevnext-item prevnext-left">
        [[+prev.id:notempty=`
        <h5>Previous Post</h5>
        <a href="[[~[[+prev.id]]? &scheme=`full`]]"
           class="prevnext-link"
           >&laquo; [[+prev.pagetitle]]</a>
        `]]
    </div>
    <div class="prevnext-item prevnext-right">
        [[+next.id:notempty=`
        <h5>Next Post</h5>
        <a href="[[~[[+next.id]]? &scheme=`full`]]"
           class="prevnext-link"
           >[[+next.pagetitle]] &raquo;</a>
        `]]
    </div>
</div>